<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ব্যাকপার্ট সময় -->
    <EditText
        android:id="@+id/backPartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ব্যাকপার্ট সময় (মিনিট)"
        android:inputType="numberDecimal"/>

    <!-- ফ্রন্টপার্ট সময় -->
    <EditText
        android:id="@+id/frontPartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ফ্রন্টপার্ট সময় (মিনিট)"
        android:inputType="numberDecimal"/>

    <!-- স্লিভ সময় -->
    <EditText
        android:id="@+id/sleeveTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="স্লিভ সময় (মিনিট)"
        android:inputType="numberDecimal"/>

    <!-- অফিস সময় -->
    <EditText
        android:id="@+id/officeHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="অফিস সময় (ঘন্টা)"
        android:inputType="numberDecimal"/>

    <!-- বিরতি -->
    <EditText
        android:id="@+id/breakTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="বিরতি (মিনিট)"
        android:inputType="numberDecimal"
        android:text="120"/>

    <!-- মেশিন সংখ্যা -->
    <EditText
        android:id="@+id/machines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="মেশিন সংখ্যা"
        android:inputType="number"/>

    <!-- ক্যালকুলেট বাটন -->
    <Button
        android:id="@+id/calculateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ক্যালকুলেট করুন"/>

    <!-- রেজাল্ট -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="16dp"/>
</LinearLayout>